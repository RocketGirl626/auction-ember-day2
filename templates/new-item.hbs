<h1>New Item</h1>

<form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{textarea value=description id="description" class="form-control" rows="15"}}
    </div>

    <div class="form-group">
      <label for="owner">Owner</label>
      {{input value=owner id="owner" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="bidNumber">Bid Number</label>
      {{input value=bidNumber id="bidNumber" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      {{input value=price id="price" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="pic1">Picture One</label>
      {{input value=pic1 id="pic1" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="pic2">Picture Two</label>
      {{input value=pic2 id="pic2" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="pic3">Picture Three</label>
      {{input value=pic3 id="pic3" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="pic4">Picture Four</label>
      {{input value=pic4 id="pic4" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="pic11">Picture One-Large</label>
      {{input value=pic11 id="pic11" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="pic22">Picture Two-Large</label>
      {{input value=pic22 id="pic22" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="pic33">Picture Three-Large</label>
      {{input value=pic33 id="pic33" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="pic44">Picture Four-Large</label>
      {{input value=pic44 id="pic44" class="form-control"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
